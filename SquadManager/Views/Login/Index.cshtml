@{
    Layout = null;
}

@model SquadManager.Models.UserViewModel

<link href="~/css/login.css" rel="stylesheet" />

<section>
    <h1>Autenticação</h1>

    <form action="/Login/Test" method="post">
        <input type="text" name="email" value="@Model.Email" placeholder="Username / E-mail"/>
        <input type="password" name="password" value="@Model.Password" placeholder="Senha"/>
        <a href="#">Esqueceu sua senha</a>
        <button type="submit">Login</button>
    </form>

    <label>Não tem conta<a href="#">Crie aqui</a></label>
    
</section>